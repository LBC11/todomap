<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <CheckBox
        android:id="@+id/todoDescription"
        android:layout_width="383dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:button="@drawable/check_button"
        android:hint="TodoDescription"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/alartTimeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:text="Time"
        app:layout_constraintStart_toStartOf="@+id/todoDescription"
        app:layout_constraintTop_toBottomOf="@+id/todoDescription" />

    <TextView
        android:id="@+id/alartLocationView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Location"
        app:layout_constraintStart_toEndOf="@+id/alartTimeView"
        app:layout_constraintTop_toBottomOf="@+id/todoDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.SignupActivity">

    <View
        android:id="@+id/view39"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/reigisterFinishBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirmPasswordText"
        app:layout_constraintVertical_weight="0.3" />

    <EditText
        android:id="@+id/newPasswordText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/login_input"
        android:ems="10"
        android:hint="  비밀번호를 입력하세요"
        android:inputType="textPassword"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/confirmPasswordText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pwRegisterView"
        app:layout_constraintVertical_weight="0.8" />

    <TextView
        android:id="@+id/pwRegisterView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="비밀번호"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/newPasswordText"
        app:layout_constraintStart_toStartOf="@+id/newPasswordText"
        app:layout_constraintTop_toBottomOf="@+id/view41"
        app:layout_constraintVertical_weight="1" />

    <View
        android:id="@+id/view37"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/idRegisterView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoView2"
        app:layout_constraintVertical_weight="0.5" />

    <TextView
        android:id="@+id/idRegisterView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/newIdText"
        app:layout_constraintStart_toStartOf="@+id/newIdText"
        app:layout_constraintTop_toBottomOf="@+id/view37"
        app:layout_constraintVertical_weight="1" />

    <EditText
        android:id="@+id/newIdText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/login_input"
        android:ems="10"
        android:hint="  이메일을 입력하세요"
        android:inputType="textEmailAddress"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/view41"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idRegisterView"
        app:layout_constraintVertical_weight="0.8" />

    <ImageView
        android:id="@+id/logoView2"
        android:layout_width="180dp"
        android:layout_height="0dp"
        android:src="@drawable/logo_todomap"
        app:layout_constraintBottom_toTopOf="@+id/view37"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view35"
        app:layout_constraintVertical_weight="3" />

    <View
        android:id="@+id/view41"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/pwRegisterView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newIdText"
        app:layout_constraintVertical_weight="0.3" />

    <View
        android:id="@+id/view35"
        android:layout_width="412dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/logoView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="0.7" />

    <EditText
        android:id="@+id/confirmPasswordText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/login_input"
        android:ems="10"
        android:hint="  비밀번호를 한번 더 입력하세요"
        android:inputType="textPassword"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/view39"
        app:layout_constraintEnd_toEndOf="@+id/newPasswordText"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/newPasswordText"
        app:layout_constraintTop_toBottomOf="@+id/newPasswordText"
        app:layout_constraintVertical_weight="0.8" />

    <Button
        android:id="@+id/reigisterFinishBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:background="@drawable/default_button"
        android:text="가입 완료"
        app:layout_constraintBottom_toTopOf="@+id/view40"
        app:layout_constraintEnd_toEndOf="@+id/confirmPasswordText"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/confirmPasswordText"
        app:layout_constraintTop_toBottomOf="@+id/view39"
        app:layout_constraintVertical_weight="0.8" />

    <View
        android:id="@+id/view40"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reigisterFinishBtn"
        app:layout_constraintVertical_weight="1" />

</androidx.constraintlayout.widget.ConstraintLayout>
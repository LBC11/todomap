<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.SignupActivity">

    <ImageView
        android:id="@+id/logoView2"
        android:layout_width="180dp"
        android:layout_height="170dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/logo_todomap" />

    <EditText
        android:id="@+id/confirmPasswordText"
        android:layout_width="268dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/login_input"
        android:ems="10"
        android:hint="  비밀번호를 한번 더 입력하세요"
        android:inputType="textPassword"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/newPasswordText"
        app:layout_constraintStart_toStartOf="@+id/newPasswordText"
        app:layout_constraintTop_toBottomOf="@+id/newPasswordText" />

    <TextView
        android:id="@+id/idRegisterView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/newIdText"
        app:layout_constraintStart_toStartOf="@+id/newIdText" />

    <EditText
        android:id="@+id/newPasswordText"
        android:layout_width="268dp"
        android:layout_height="48dp"
        android:background="@drawable/login_input"
        android:ems="10"
        android:hint="  비밀번호를 입력하세요"
        android:inputType="textPassword"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/confirmPasswordText"
        app:layout_constraintEnd_toEndOf="@+id/newIdText"
        app:layout_constraintStart_toStartOf="@+id/newIdText" />

    <TextView
        android:id="@+id/pwRegisterView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="비밀번호"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/newPasswordText"
        app:layout_constraintStart_toStartOf="@+id/newPasswordText"
        app:layout_constraintTop_toBottomOf="@+id/newIdText"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/newIdText"
        android:layout_width="268dp"
        android:layout_height="48dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/login_input"
        android:ems="10"
        android:hint="  이메일을 입력하세요"
        android:inputType="textEmailAddress"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/reigisterFinishBtn"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/default_button"
        android:text="가입 완료"
        app:layout_constraintEnd_toEndOf="@+id/confirmPasswordText"
        app:layout_constraintStart_toStartOf="@+id/confirmPasswordText"
        app:layout_constraintTop_toBottomOf="@+id/confirmPasswordText" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Hello! I'm todomap. \n I will help you manage your todolist, \n efficiently and actively by using map"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/logoView2"
        app:layout_constraintStart_toStartOf="@+id/logoView2"
        app:layout_constraintTop_toBottomOf="@+id/logoView2" />

</androidx.constraintlayout.widget.ConstraintLayout>
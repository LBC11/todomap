<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintCircleRadius="500dp"
    tools:context=".profile.ProfileFragment">

    <Button
        android:id="@+id/withdrawBtn"
        android:layout_width="70dp"
        android:layout_height="48dp"
        android:layout_marginEnd="12dp"
        android:text="Withdraw"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/signoutBtn"
        app:layout_constraintEnd_toStartOf="@+id/signoutBtn" />

    <Button
        android:id="@+id/signoutBtn"
        android:layout_width="70dp"
        android:layout_height="48dp"
        android:layout_marginEnd="136dp"
        android:text="Signout"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="677dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_img"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="100dp"
        android:background="@android:color/transparent"
        android:src="@drawable/logo_todomap"
        app:circularflow_radiusInDP="500dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/profileChangeBtn"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_marginTop="88dp"
        android:text="change"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/profile_img"
        app:layout_constraintHorizontal_bias="0.89"
        app:layout_constraintStart_toStartOf="@+id/profile_img"
        app:layout_constraintTop_toBottomOf="@+id/profile_img" />

    <EditText
        android:id="@+id/info"
        android:layout_width="141dp"
        android:layout_height="48dp"
        android:layout_marginTop="84dp"
        android:background="@null"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="My Introduction"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="@+id/userEmailText"
        tools:layout_editor_absoluteX="232dp" />

    <EditText
        android:id="@+id/userNameText"
        android:layout_width="103dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="UserName"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/profile_img"
        app:layout_constraintTop_toTopOf="@+id/profile_img" />

    <TextView
        android:id="@+id/userEmailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xxxxxx@gmail.com"
        app:layout_constraintTop_toBottomOf="@+id/userNameText"
        tools:layout_editor_absoluteX="232dp" />

    <ImageButton
        android:id="@+id/userNameChangeBtn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="12dp"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_angle_right"
        app:layout_constraintStart_toEndOf="@+id/userNameText"
        tools:layout_editor_absoluteY="356dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
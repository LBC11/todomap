        app:layout_constraintBottom_toBottomOf="@+id/profileView"
        app:layout_constraintEnd_toStartOf="@+id/profileChangeBtn"
        app:layout_constraintTop_toTopOf="@+id/profileView"
        app:layout_constraintVertical_bias="0.484" />

    <ImageButton
        android:id="@+id/profileChangeBtn"
        android:layout_width="31dp"
        android:layout_height="27dp"
        android:layout_marginEnd="16dp"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_arrow"
        app:layout_constraintBottom_toBottomOf="@+id/userNameText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/userNameText" />


    <TextView
